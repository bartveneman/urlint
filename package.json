{
  "name": "@urlint/core",
  "description": "Get all the links behind an url and classify them based on HTTP status code.",
  "homepage": "https://urlint.io",
  "version": "1.5.2",
  "main": "src/index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urlint/core.git"
  },
  "bugs": {
    "url": "https://github.com/urlint/core/issues"
  },
  "keywords": [
    "classify",
    "http",
    "lint",
    "status",
    "url",
    "validate"
  ],
  "dependencies": {
    "aigle": "~1.12.0",
    "browserless": "~4.2.1",
    "cheerio": "~1.0.0-rc.2",
    "dnserrors": "~2.0.3",
    "html-get": "~1.5.1",
    "html-urls": "~2.3.1",
    "mitt": "~1.1.3",
    "reachable-url": "~1.1.6",
    "time-span": "~2.0.0",
    "xml-urls": "~2.1.0"
  },
  "devDependencies": {
    "ava": "latest",
    "coveralls": "latest",
    "finepack": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "lodash": "latest",
    "nyc": "latest",
    "p-event": "latest",
    "prettier-standard": "latest",
    "puppeteer": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard-markdown && standard",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin}/**/*.js --single-quote",
    "test": "nyc ava test --verbose --exit"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "peerDependencies": {
    "puppeteer": "1.x"
  }
}
